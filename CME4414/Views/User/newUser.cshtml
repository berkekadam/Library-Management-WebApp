@model CME4414.Models.User
@{
    ViewBag.Title = "newUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form class="form-group" method="post">
        <div>
            <label>User Password</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User Surname</label>
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Surname, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User Birthdate</label>
            @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control",@type="date" })
            @Html.ValidationMessageFor(m => m.Birthdate, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User PhoneNumber</label>
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User City</label>
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User FullAddress</label>
            @Html.TextBoxFor(m => m.FullAddress, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FullAddress, "", new { @style = "color:red" })
        </div>
        <div>
            <label>User Role</label>
            @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Role, "", new { @style = "color:red" })
        </div>
        <div>
            <button class="btn btn-info">Add User</button>
        </div>
    </form>

